{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "ignoreDeprecations": "6.0"
  },
  "exclude": ["packages/core"]
}
